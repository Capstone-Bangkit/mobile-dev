<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/choco"
    tools:context=".CameraMenuActivity">

    <ImageView
        android:id="@+id/preview_gambar"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:paddingVertical="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars"
        />
    <Button
        android:id="@+id/button_scan"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="42dp"
        android:backgroundTint="@color/cream"
        android:textColor="@color/choco"
        app:layout_constraintTop_toBottomOf="@id/preview_gambar"
        android:text="@string/scan_picture"/>
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/hasil_scan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textColor="@color/white"
        android:textSize="24sp"
        tools:text="nama alat"
        app:layout_constraintTop_toBottomOf="@id/button_scan"
        android:textAlignment="center"/>
    <Button
        android:id="@+id/button_how"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:backgroundTint="@color/coklat_muda"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="42dp"
        android:visibility="gone"
        android:text="@string/button_how"/>

</androidx.constraintlayout.widget.ConstraintLayout>